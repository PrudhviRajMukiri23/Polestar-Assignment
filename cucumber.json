{
    "default": {
        "formatOptions" : {
            "snippetInterface" : "async-await"
        },
        "paths": [ "frontend/test/features/" ],
        "dryRun": false,
        "require": [ "frontend/test/steps/*.spec.ts", "frontend/test/hooks/hooks.ts" ],
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            "progress-bar",
